<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="actionMenuTextColor">@android:color/black</item>
    </style>

    <!-- We are creating some styles using heredity -->
    <style name="AppTheme.SplashTheme">
        <item name="android:background">@color/darker</item>
    </style>

    <!-- Another way to create your Splash Screen using a layer-list to insert
    a background to your app logo -->
    <!--<style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_logo</item>
    </style>-->

    <style name="Widget" parent="@android:style/Widget">

    </style>

    <style name="Widget.Button">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="Widget.Button.Transparent">
        <item name="android:background">@null</item>
    </style>

    <!-- Component Styles -->
    <style name="CheckBoxLogin">
        <item name="android:checked">true</item>
        <item name="android:buttonTint">@color/colorPrimaryDark</item>
    </style>

    <style name="TextInputTheme">
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>
    <!--        <item name="colorControlNormal">@color/colorPrimary</item>-->

    <style name="AppTheme.CharacterCounter" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Material.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:minWidth">64dp</item>
        <item name="android:height">36dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@drawable/selector_round_corner</item>
    </style>
    <!--    <item name="android:background">@drawable/round_corner_material</item>
            <item name="android:foreground">?android:attr/selectableItemBackgroundBorderless</item>
-->

    <!-- Selectable ImageButtons:
    Rectangle ripple -> selectableItemBackground
    Circular ripple -> selectableItemBackgroundBorderless

    Errors that might occurs:
    ?attr/selectableItemBackgroundBorderless can give you an android.view.InflateException, so use the ?android:attr/selectableItemBackground instead -->
    <style name="ImageButton.Login" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>

    </style>



</resources>
